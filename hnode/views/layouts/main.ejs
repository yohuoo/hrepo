<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'CRM系统' %></title>
  
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <!-- 自定义CSS -->
  <link rel="stylesheet" href="/css/main.css">
  
  <% if (typeof customCSS !== 'undefined') { %>
    <% customCSS.forEach(css => { %>
      <link rel="stylesheet" href="<%= css %>">
    <% }) %>
  <% } %>
</head>
<body>
  <% if (typeof user !== 'undefined' && user) { %>
    <!-- 侧边栏导航 -->
    <%- include('../partials/sidebar', { currentPath: currentPath || '/' }) %>
    
    <!-- 主内容区 -->
    <div class="main-content">
      <!-- 顶部导航栏 -->
      <%- include('../partials/navbar', { user: user }) %>
      
      <!-- 页面内容 -->
      <div class="container-fluid p-4">
        <%- body %>
      </div>
    </div>
    
    <!-- 个人信息模态框 -->
    <div class="modal fade" id="userProfileModal" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">
              <i class="bi bi-person-circle"></i> 个人信息
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="row g-3">
              <div class="col-12 text-center mb-3">
                <div class="avatar-circle-large mx-auto">
                  <%= user.username.charAt(0).toUpperCase() %>
                </div>
              </div>
              <div class="col-12">
                <label class="form-label text-muted">用户名</label>
                <div class="form-control-plaintext fw-bold">
                  <i class="bi bi-person me-2"></i><%= user.username %>
                </div>
              </div>
              <div class="col-12">
                <label class="form-label text-muted">邮箱地址</label>
                <div class="form-control-plaintext">
                  <i class="bi bi-envelope me-2"></i><%= user.email %>
                </div>
              </div>
              <div class="col-12">
                <label class="form-label text-muted">角色</label>
                <div class="form-control-plaintext">
                  <% if (user.role === 'super_admin') { %>
                    <span class="badge bg-danger"><i class="bi bi-shield-fill"></i> 超级管理员</span>
                  <% } else if (user.role === 'admin') { %>
                    <span class="badge bg-warning"><i class="bi bi-shield-check"></i> 管理员</span>
                  <% } else { %>
                    <span class="badge bg-secondary"><i class="bi bi-person"></i> 普通用户</span>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">关闭</button>
          </div>
        </div>
      </div>
    </div>
  <% } else { %>
    <!-- 未登录页面（登录/注册） -->
    <div class="auth-container">
      <%- body %>
    </div>
  <% } %>

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <!-- Bootstrap 5 JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Axios -->
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <!-- 通知系统 -->
  <script src="/js/notifications.js"></script>
  <!-- Toast通知容器 -->
  <div id="toastContainer"></div>

  <!-- Marked.js - Markdown解析器 -->
  <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
  <!-- 自定义JS -->
  <script src="/js/main.js"></script>
  
  <!-- 页面特定脚本 -->
  <%- script %>
  
  <% if (typeof customJS !== 'undefined') { %>
    <% customJS.forEach(js => { %>
      <script src="<%= js %>"></script>
    <% }) %>
  <% } %>
</body>
</html>
