}

// 执行删除草稿
async function performDeleteDraft(draftId) {
  showLoading();
  const success = await EmailDraftManager.deleteDraft(draftId);
  hideLoading();
  
  if (success) {
    // 重新加载草稿列表
    await loadDrafts();
  }
}

