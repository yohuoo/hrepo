  if (emailSource.loadedFromTemplate && !emailSource.wasEdited) {
    console.log('  → 使用模板未编辑，不提示');
    return false;
  }
  
  // 3. 如果从草稿加载且未编辑，不提示
  if (emailSource.loadedFromDraft && !emailSource.wasEdited) {
    console.log('  → 从草稿加载未编辑，不提示');
    return false;
  }
  
  // 4. 其他情况（手动编辑、或从模板/草稿编辑过）都提示
  console.log('  → 满足保存条件，提示保存');
  return true;
}

