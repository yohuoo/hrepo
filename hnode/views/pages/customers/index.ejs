  let html = '';
  
  // ä¸Šä¸€é¡µ
  html += `
    <li class="page-item ${current === 1 ? 'disabled' : ''}">
      <a class="page-link" href="#" onclick="loadCustomers(${current - 1}); return false;">
        <i class="bi bi-chevron-left"></i>
